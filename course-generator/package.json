{
  "name": "intellilearn-course-generator",
  "version": "1.0.0",
  "description": "ðŸŽ“ Intellilearn Course Generator - Automated language course generation using AWS Step Functions and Bedrock",
  "author": "Luis Arturo Parra - Telmo AI",
  "license": "MIT",
  "main": "infrastructure/cdk/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "deploy": "npm run build && cdk deploy",
    "deploy:dev": "npm run build && cdk deploy --context environment=dev",
    "deploy:staging": "npm run build && cdk deploy --context environment=staging", 
    "deploy:prod": "npm run build && cdk deploy --context environment=prod",
    "destroy": "cdk destroy",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "validate": "npm run lint && npm run test && npm run build",
    "start-execution": "node scripts/start-execution.js",
    "check-execution": "node scripts/check-execution.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "aws-cdk": "^2.95.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.95.0",
    "aws-sdk": "^2.1467.0",
    "constructs": "^10.2.70"
  },
  "keywords": [
    "intellilearn",
    "course-generator",
    "aws-step-functions",
    "bedrock",
    "claude",
    "language-learning",
    "ai-education",
    "telmo-ai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/telmoai/intellilearn-course-generator"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "infrastructure/**/*.ts",
      "!**/*.d.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
